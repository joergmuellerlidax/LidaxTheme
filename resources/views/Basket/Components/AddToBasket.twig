{{ component( "Ceres::Item.Components.QuantityInput" ) }}

<script type="x/template" id="vue-add-to-basket">
    <div>

        <div v-if="showQuantity">
            <div class="row no-gutters">
                <div class="col-xs-6 col-md-12 col-lg-6 m-y-1">
                    <quantity-input :value="1" @quantity-change="updateQuantity"
                                template="#vue-quantity-input"></quantity-input>
                </div>
                <div class="col-xs-6 col-md-12 col-lg-6 m-y-1">
                    <button href="#" class="btn btn-block btn-primary basket-btn" @click="addToBasket()">
                        <span>In den </span>Warenkorb
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>

        <div v-else>
            <div class="AddToBasket-inner">
                <div v-for="prop in item.properties">
                    <div v-bind:class="{
                        'eek-aaa': prop.property.names.name === 'A++',
                        'eek-aa' : prop.property.names.name === 'A+',
                        'eek-a' : prop.property.names.name === 'A',
                        'eek-b' : prop.property.names.name === 'B',
                        'eek-c' : prop.property.names.name === 'C',
                        'eek-d' : prop.property.names.name === 'D',
                        'eek-e' : prop.property.names.name === 'E',
                        'hidden-xs-up' : prop.property.names.name === 'EEK Skala'
                        }"
                        class="eek-sign" v-if="prop.group.backendName === 'Energieeffizienzklasse'">
                        <a :href="item.images.all[item.images.all.length - 1].url | json"
                        data-lightbox="${item.variation.id}"><span>${ prop.property.names.name }</span>
                        </a>
                    </div>
                </div>
                <button type="button" class="btn btn-block btn-buy" @click="directToItem()">
                    Jetzt ansehen
                </button>
                <div v-if="item.variation.releasedAt" class="availability-preview availability-${item.variation.availability.id}" v-tooltip data-toggle="tooltip" data-placement="top"
                    :title="item.variation.releasedAt | date 'DD.MM.YYYY' | attachText 'VerfÃ¼gbar ab: '">
                    <i class="fa fa-truck" aria-hidden="true"></i>
                </div>

                <div v-else class="availability-preview availability-${item.variation.availability.id}" v-tooltip data-toggle="tooltip" data-placement="top"
                :title="item.variation.availability.names[0].name">
                <i class="fa fa-truck" aria-hidden="true"></i>
                </div>

            </div>
            
        </div>
    </div>

</script>